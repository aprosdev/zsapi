<p id="notice"><%= notice %></p>

<h1>Listing Receipts</h1>

<%= link_to 'New Receipt', new_receipt_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Date</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.id %></td>
        <td><%= link_to 'View Receipt', receipt %></td>
        <td><%= receipt.purchased_on %></td>
        <td><%= receipt.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>