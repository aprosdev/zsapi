<p id="notice"><%= notice %></p>

<h1>Listing Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Type of</th>
      <th>Title</th>
      <th>Discount amount</th>
      <th>Discount type</th>
      <th>Share reward</th>
      <th>Image</th>
      <th>Featured</th>
      <th>Active</th>
      <th>Frequency</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.type_of %></td>
        <td><%= campaign.title %></td>
        <td><%= campaign.discount_amount %></td>
        <td><%= campaign.discount_type %></td>
        <td><%= campaign.share_reward %></td>
        <td><%= campaign.image %></td>
        <td><%= campaign.featured %></td>
        <td><%= campaign.active %></td>
        <td><%= campaign.frequency %></td>
        <td><%= campaign.start_at %></td>
        <td><%= campaign.end_at %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

