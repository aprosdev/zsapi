<div class="row">
  <div class="col-xs-12">
    <h4>Log in</h4>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      <i class="fa fa-user"></i>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      <i class="fa fa-lock"></i>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="col-xs-12">
        <%= cbox("user[remember_me]", "Stay Logged In?") %>
      </div>
    </div>
  <% end -%>

  <div id="login-links" class="row">
    <div class="col-xs-12 col-sm-4">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <span><%= link_to "Forgot password?", new_password_path(resource_name), id: "forgot-pass" %></span>
      <% end -%>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <%= f.button "Log in", id: "log-in" %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <span>No Account? <%= link_to "Sign Up", new_registration_path(resource_name), id: "sign-up" %></span>
      <% end -%>
    </div>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
