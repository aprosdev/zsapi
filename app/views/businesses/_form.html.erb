<!-- Business profile FORM Start -->
<%= form_for(@business, multipart: true, html: {class: 'business-profile-form form'} ) do |f| %>
  <%= form_errors_for @business %>

  <div class="container">
    <div class="row content-head">
      <div class="col-xs-12">
        <h4>ESSENTIAL INFO</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-xs-12 col-sm-3">
            <%= f.label :name, 'NAME OF BUSINESS' %>
          </div>
          <div class="col-xs-12 col-sm-9">
            <%= f.text_field :name, class: 'businessName' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="dark-wrap">
    <div class="container">

      <div class="row content-head">
        <div class="col-md-12 col-sm-12">
          <h4>STYLE OPTIONS</h4>
        </div>        
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <label>BUSINESS LOGO</label>
        </div>
        <div class="col-xs-12 col-sm-9">
          <div class="imgPlaceHolder">
            <%= image_tag('ico/ico-image-temp.svg') %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-9">
          <span class="document-image-frame">
            <a href="#" class="upload-campaign-image">CHANGE LOGO</a>
            <%= f.file_field :image, accept: "image/*", style: "display:none", onchange: "handleFilesLogo(this)" %>
            <%= f.hidden_field :image, class: "campaignImage logoImage", name: "logoImage" %>
          </span>
        </div>
      </div>


      <div class="row contPaleteColors">
        <div class="col-xs-12 col-sm-3">
          <%= f.label 'COLORS DETECTED' %>
        </div>
        <div class="col-md-9 paleteColors">
          <div class="color"></div>
          <div class="color"></div>
          <div class="color"></div>
          <div class="color"></div>
          <div class="color"></div>
        </div>
      </div>

        <div class="row">
          <div class="col-xs-12 col-sm-3">
            <%= f.label :name, 'PRIMARY COLOR' %>
          </div>
          <div class="col-xs-7 col-sm-9">
            <%= f.text_field :primary_color, id: 'colorPicker1', placeholder: '#FFF' %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-3">
            <%= f.label :name, 'SECONDARY COLOR' %>
          </div>
          <div class="col-xs-7 col-sm-9">
            <%= f.text_field :secondary_color, id: 'colorPicker2', placeholder: '#FFF' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-offset-3 col-md-9 col-xs-12 preview">
            <a href="#preview-popup" class="preview-campaign open-popup-link" >PREVIEW YOUR MOBILE BUSINESS PAGE</a>
          </div>
        </div>
    </div>
  </div>
  <div class="container">
    <div class="row content-head socialSettingsTitle">
      <div class="col-md-12 col-sm-12">
        <h4>SOCIAL SETTINGS</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-5 col-sm-3">
        <%= f.label :website, 'WEBSITE' %>
      </div>
      <div class="col-xs-7 col-sm-9">
        <%= f.text_field :website, class: 'website', placeholder: 'http://' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-5 col-sm-3">
        <%= f.label :twitter, 'TWITTER URL' %>
      </div>
      <div class="col-xs-7 col-sm-9">
        <%= f.text_field :twitter, class: 'twitterUrl', placeholder: 'http://' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-5 col-sm-3">
        <%= f.label :facebook, 'FACEBOOK URL' %>
      </div>
      <div class="col-xs-7 col-sm-9">
        <%= f.text_field :facebook, class: 'facebookUrl', placeholder: 'http://' %>
      </div>
    </div>
  </div>

  <div class="dark-wrap">
    <div class="container campaign-image">
      <div class="row content-head integrationsTitle">
        <div class="col-xs-12 col-sm-3">
          <h4>INTEGRATIONS</h4>
        </div>
      </div>

      <div class="row">
        
        <div class="col-md-9 col-md-offset-3 mobileSocialCentered">
          <div class="socialBox">
            <div class="facebookImg" >
              <%= image_tag('facebook.png') %>
            </div>
            <%#= connect_identity_link("facebook") %>
            <a class="connected open-popup-link" href="#share-popup" >Connected</a>
          </div>
          <div class="socialBox">
            <div class="twitterImg" >
              <%= image_tag('twitter.png') %>
            </div>
            <%#= connect_identity_link("twitter") %>
            <a class="connect open-popup-link" href="#share-popup" >Connect</a>
          </div>
          <div class="socialBox">
            <div class="mailchimpImg" >
              <%= image_tag('mailchimp.png') %>
            </div>
            <%#= connect_identity_link("mailchimp") %>
            <a class="connect open-popup-link" href="#share-popup" >Connect</a>
          </div>
          <div class="socialBox">
            <div class="constantContactImg" >
              <%= image_tag('constantcontact.png') %>
            </div>
            <a class="connect open-popup-link" href="#share-popup" >Connect</a>
          </div>
        </div>
      </div>
    
    </div>
    <%= f.button %>

    <% if @business.unpublished? && !@business.new_record? %>
      <%= f.button 'Save and Publish Profile!', name: 'publish', class: 'publish' %>
    <% end %>
  </div>
  <% end%>




    <% if current_user.facebook_pages && current_user.facebook.page_token == "" %>
      <div class="field">
      <strong>Select a page for this business</strong><br>
        <% current_user.facebook_pages.each do |page| %>
          <%= radio_button_tag 'facebook_page', page['id'] %> <%= page['name'] %><br />
        <% end %>
      </div>
    <% end %>

