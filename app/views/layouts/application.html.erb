<!doctype html>
<html class="no-js" lang="">
<head>
	<!-- <meta http-equiv="refresh" content="3" > -->
	<%# Meta %>
	<meta charset="utf-8">
	<meta name="keywords" content="HTML5 Template" />
	<meta name="description" content="">
	<meta name="author" content="">

	<title>ZippySpot | <%= @html_title || "Admin Panel" %></title>

	<%# Mobile Metas %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<%# Favicon %>
	<link rel="shortcut icon" href="/favicon.ico">

	<%# Custom Fonts %>
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,700,900' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic,700,400italic' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

	<%# CSS %>
	<%= stylesheet_link_tag 'application', params[:controller], media: 'all', 'data-turbolinks-track' => true %>

	<%# CSRF %>
	<%= csrf_meta_tags %>

	<%= yield :js_header %>
</head>

<body data-no-turbolinks="true" class="<%= "sb-is-open " if current_user.meta[:sidebar_collapsed].to_i == 0 %><%= [params[:controller], params[:action]].join(' ') %>">

	<div id="wrapper">

		<%# NAV / VERTICAL SIDEMENU Start %>
		<div class="db-header" id="db-header">
			<div class="logo">
				<%= link_to image_tag('logo_zippy.png'), root_url %>
			</div>
			<div class="db-navbar">
				<ul>
					<% nav_menu_items.each do |item| %>
						<li id="<%= item[:id] %>">
							<%= link_to(send(item[:url])) do %>
								<i><%= image_tag("ico/ico-#{item[:id]}.svg") %></i>
								<span><%= item[:label] %></span>
							<% end %>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
		<%# NAV / VERTICAL SIDEMENU End %>

		<%# HEADER Start %>
		<div class="header">
			<div class="container">
				
				<div class="row">
					<div class="col-xs-3 col-sm-6">
						<div id="navTrigger" class="nav-trigger"><i class="fa fa-bars"></i></div>
						<div id="header-left">
							<%= current_user.business.name %>
						</div>
					</div>

					<div class="col-xs-9 col-sm-6">
						<div id="header-right">

							<% unless current_user.business.locations.blank? %>
								<div id="battery-status" class="dropdown">
									<a class="ico" href="#" data-toggle="dropdown">
										<%= image_tag('ico/ico_storeBattery.svg') %>
									</a>
									<ul class="dropdown-menu arrow">
										<% current_user.locations.active.each do |location| %>
											<li>
												<%= link_to location do %>
													<div class="row no-gutters">
														<div class="col-xs-6"><%= location.title %></div>
														<div class="col-xs-6">
															<span><em class="yellow" style="width:50%"></em></span>
														</div>
													</div>
												<% end %>
											</li>
										<% end %>
									</ul>
								</div>
							<% end %>
		

							<div id="your-account" class="dropdown">
								<%= link_to edit_user_registration_url, id: "profile-label", data: {target: '#', toggle: "dropdown"} do %>
									Your Account
									<% if current_user.business.in_trial? %>
										(<%= current_user.business.trial_days_remaining %> days)
									<% end %>
								<% end %>
							  <ul class="dropdown-menu arrow">
									<li>
										<%= link_to edit_user_registration_url do %>
											<%= image_tag('ico/icon-profile.svg') %> Profile
										<% end %>
									</li>
							    <li><a href="#"><%= image_tag('ico/icon-heart.svg') %> Help</a></li>
							    <li><%= link_to image_tag('ico/icon-logout.svg') + "Log Out", destroy_user_session_path, method: :delete %></li>
							  </ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%# HEADER End %>

		<%# PAGE HEADER Start %>
		<div class="page-head">
			<div class="container">
				<div class="row">
					<div class="col-xs-12">
						<h4><%= yield :page_title %></h4>
					</div>
				</div>
			</div>
		</div>
		<%# PAGE HEADER End %>

		<%= render('shared/progress_steps') %>

		<%= flash_notices %>
		<%= yield :form_errors %>

		<div id="content-body">
			<%= yield %>
		</div>

	</div> <%# /.wrapper %>

	<%= javascript_include_tag 'application', params[:controller], 'data-turbolinks-track' => true %>

	<%= yield :js_footer %>
	<%= yield :hopscotch_js %>


</body>
</html>