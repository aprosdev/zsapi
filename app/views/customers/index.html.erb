<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Points</th>
      <th>Active</th>
      <th>Contacted</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name_reversed %></td>
        <td><%= customer.email %></td>
        <td><%= customer.points(current_user.business) %></td>
        <td><%= customer.active %></td>
        <td><%= customer.contacted %></td>
      </tr>
    <% end %>
  </tbody>
</table>
