<p id="notice"><%= notice %></p>

<h1>Listing Receipts</h1>

<p><%= Receipt.untouched.count %> Unapproved receipts</p>
<p><%= Receipt.approved.from_today.count %> Approved receipts today</p>
<p><%= Receipt.rejected.from_today.count %> Rejected receipts today</p>


<% if @receipts %>
  <h2>First receipt</h2>

  <div>
    <img src="/receipts/<%= @first.image_filename %>">
    <%= render 'form', receipt: @first %>
  </div>


  <table>
    <thead>
      <tr>
        <th>Location</th>
        <th>Purchased on</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @receipts.each do |receipt| %>
        <tr>
          <td><%= receipt.location %></td>
          <td><%= receipt.purchased_on %></td>
          <td><%= link_to 'Show', receipt %></td>
          <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
          <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Receipt', new_receipt_path %>
<% else %>
  No receipts!
<% end %>