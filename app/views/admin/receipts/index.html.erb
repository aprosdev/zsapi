<div class="row">
  <div class="col-xs-12 col-sm-4">
    <div id="untouched_receipts" class="panel">
      <h3><%= Receipt.untouched.count %></h3>
      New receipts
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
    <div id="approved_receipts" class="panel">
      <h3><%= Receipt.approved.from_today.count %></h3>
      Approved receipts today
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
    <div id="rejected_receipts" class="panel">
      <h3><%= Receipt.rejected.from_today.count %></h3>
      Rejected receipts today
    </div>
  </div>
</div>

<div class="row">
  <% if @receipts %>
    <div class="col-xs-12 col-sm-6">
      <h2>First receipt</h2>

      <div id="receipt_image">
        <%= image_tag @first.image %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6" id="receipt_form">
      <%= render 'form', receipt: @first %>
    </div>

  <% else %>
    <div class="col-xs-12">
      No receipts!
    </div>
  <% end %>
</div>