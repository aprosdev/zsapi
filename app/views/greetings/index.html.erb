<p id="notice"><%= notice %></p>

<h1>Greetings</h1>

<%= link_to 'New Greeting', new_greeting_path %><br><br>


<table>
  <thead>
    <tr>
      <th>Active</th>
      <th>Welcome Msg.</th>
      <th>Exit Msg.</th>
      <th>Attached Campaign</th>
      <th>Assigned Locations</th>
      <th>Share Reward</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @greetings.each do |greeting| %>
      <tr>
        <td><%= yesno(greeting.assigned_to_location?) %></td>
        <td><%= link_to greeting.welcome_message, greeting %></td>
        <td><%= link_to greeting.exit_message, greeting %></td>
        <td><%= link_to greeting.campaign.title, greeting.campaign %></td>
        <td><%= greeting.locations_string %></td>
        <td><%= greeting.share_reward %></td>
        <td>
          <%= link_to 'Edit', edit_greeting_path(greeting) %> |
          <%= link_to 'Delete', greeting, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>